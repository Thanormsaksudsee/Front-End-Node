<!DOCTYPE html>
<html lang="en">
<head>
    <title>Doctor List</title>
    
    <style>

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 20px;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-image: url('https://images3.alphacoders.com/101/thumb-1920-1010294.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            backdrop-filter: blur(4px);
        }
    
        h1 {
            text-align: center;
            color: #000000;
            margin-bottom: 20px;
        }
    
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: rgba(255, 255, 255, 0.8);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    
        th, td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: left;
    white-space: pre-wrap;
}

th {
    background-color: #007BFF; /* Blue color for header background */
    color: #fff; /* White color for header text */
}
    
        a {
            text-decoration: none;
            margin-right: 10px;
            color: #007BFF;
        }
    
        .actions {
            display: flex;
            gap: 5px;
        }
    
        .create-link {
            display: block;
            margin: 10px auto;
            text-align: center;
            background-color: #007BFF;
            color: #fff;
            padding: 8px 15px;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
    
        .create-link:hover {
            background-color: #0056b3;
        }
            .emoji-link {
            text-decoration: none;
            margin-right: 10px; /* Adjust as needed */
            position: relative;
        }
    
            .emoji-link:hover::before {
            content: attr(data-tooltip);
            position: absolute;
            background: rgba(0, 0, 0, 0.8);
            color: #fff;
            padding: 5px;
            border-radius: 5px;
            white-space: nowrap;
            z-index: 1;
        }
    
    
        .footer {
            background-color: #002955;
            color: #fff;
            padding: 10px;
            text-align: center;
            margin-top: auto; /* Push to the bottom */
        }
        </style>
</head>
<body>
    <h1>View Doctor</h1>
    <table class="Doctor-table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>HospitalID</th>
        </tr>
        <tr>
            <td><%= Doctor.ID %></td>
            <td><%= Doctor.Name %></td>
            <td><%= Doctor.Department %></td>
            <td><%= Doctor.HospitalID %></td>
        </tr>
    </table>
    <div class="link-center">
        <a href="/updateDoctor/<%= Doctor.ID %>">Edit</a>
        <a href="/updateDoctor/<%= Doctor.ID %>">Delete</a>
        <a href="/Doctors">Back to List</a>
    </div>

    <script>
        function openLightbox(element) {
            var lightbox = document.getElementById('lightbox');
            var lightboxImg = document.getElementById('lightbox-img');

            lightbox.style.display = 'flex';
            lightboxImg.src = element.src;

            window.addEventListener('wheel', zoomImage);
        }

        function closeLightbox() {
            document.getElementById('lightbox').style.display = 'none';
            window.removeEventListener('wheel', zoomImage);
        }

        function zoomImage(event) {
            var lightboxImg = document.getElementById('lightbox-img');
            var delta = event.deltaY || event.detail || event.wheelDelta;

            var scale = delta > 0 ? 1.1 : 0.9;
            lightboxImg.style.width = lightboxImg.clientWidth * scale + 'px';
            lightboxImg.style.height = lightboxImg.clientHeight * scale + 'px';

            event.preventDefault();
        }
    </script>
</body>
</html>
